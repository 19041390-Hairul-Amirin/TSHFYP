
@section MoreScripts {

    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>





}

@model TSHUsers


<form asp-controller="Account"
      asp-action="UpdateUserList"
      method="post">

    <h2> User List </h2>

    <input asp-for="UserId" hidden />




    <div class="form-group row">

        <div class="col-sm-5">
            <input type="hidden" asp-for="UserId" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserPw">New Password: </label>
        <div class="col-sm-5">
            <input asp-for="UserPw" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="FullName">Full Name: </label>
        <div class="col-sm-5">
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Email">Email: </label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserRole">User Role: </label>
        <div class="col-sm-5">
            <input asp-for="UserRole" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserRole" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn btn-outline-primary" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="button" value="Cancel" class="btn btn-outline-primary" onclick="history.back()" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }

</form>
