@model TSHUsers


<form asp-controller="Account"
      asp-action="UpdateUserList"
      method="post">

    <h2> Edit User </h2>

    




    <div class="form-group row">
        <label class="control-label col-sm-2" hidden asp-for="UserId">Username: </label>
        <div class="col-sm-5">
            <input hidden asp-for="UserId" readonly="readonly" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2"  asp-for="UserPw">New Password: </label>
        <div class="col-sm-5">
            <input asp-for="UserPw" type="password" placeholder="Use current password if no change" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserPw" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="FullName">Full Name: </label>
        <div class="col-sm-5">
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Email">Email: </label>
        <div class="col-sm-5">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserRole">Role :</label>
        <div class="col-sm-4">
            <select id="UserRole" name="UserRole" input asp-for="UserRole" class="form-control">
                <option value="Admin">Admin</option>
                <option value="Supplier">Supplier</option>
                <option value="Warehouse">Warehouse</option>
                <option value="Account">Account</option>
                <option value="Manager">Manager</option>
                <option value="Requester">Requester</option>
            </select>
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="UserRole" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn btn-outline-primary" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="button" value="Cancel" class="btn btn-outline-primary" onclick="history.back()" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }

</form>
