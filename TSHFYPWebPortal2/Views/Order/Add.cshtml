


@section MoreScripts {

    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>




   
}

@model Order


<form asp-controller="Order"
      asp-action="Add"
      method="post">

    <h2> Add Purchase Order </h2>



    <div class="form-group row">
        <label class="control-label col-sm-2" for="OrderDate">Order Date:</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSPerformDT" data-target-input="nearest">
                <input type="date"  asp-for="OrderDate" class="form-control"  />               
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" for="DueDate">Due Date:</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSPerformDT" data-target-input="nearest">
                <input type="date"  asp-for="DueDate" class="form-control"  />              
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="RevisedDate">Delivery Date:</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSPerformDT" data-target-input="nearest">
                <input type="date"  asp-for="RevisedDate" class="form-control"  />               
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="RevisedDate" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PONum">PO Number: </label>
        <div class="col-sm-5">
            <input asp-for="PONum" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PONum" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PRNum">PR Number: </label>
        <div class="col-sm-5">
            <input asp-for="PONum" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PONum" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="SupplierID">Supplier ID: </label>
        <div class="col-sm-5">
            <input asp-for="SupplierID" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="SupplierID" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="SupplierName">Supplier Name: </label>
        <div class="col-sm-5">
            <input asp-for="SupplierName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Payment">Payment: </label>
        <div class="col-sm-5">
            <input asp-for="Payment" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Payment" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PartNum">Part Number: </label>
        <div class="col-sm-5">
            <input asp-for="PartNum" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PartNum" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Descr">Description: </label>
        <div class="col-sm-5">
            <input asp-for="Descr" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Descr" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="JobNum">Job Number: </label>
        <div class="col-sm-5">
            <input asp-for="JobNum" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="JobNum" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Currency">Currency: </label>
        <div class="col-sm-5">
            <input asp-for="Currency" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Currency" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Qty">Quantity: </label>
        <div class="col-sm-5">
            <input asp-for="Qty" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Qty" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UOM">UOM: </label>
        <div class="col-sm-5">
            <input asp-for="UOM" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UOM" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UnitPrice">Unit Price: </label>
        <div class="col-sm-5">
            <input asp-for="UnitPrice" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="AMT">Amount: </label>
        <div class="col-sm-5">
            <input asp-for="AMT" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="AMT" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="TSHCMPONUm   ">TSH CM PO Number: </label>
        <div class="col-sm-5">
            <input asp-for="TSHCMPONUm" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="TSHCMPONUm" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Request">Request: </label>
        <div class="col-sm-5">
            <input asp-for="Request" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Request" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Purchaser">Purchaser: </label>
        <div class="col-sm-5">
            <input asp-for="Purchaser" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Purchaser" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Status">Status: </label>
        <div class="col-sm-5">
            <input asp-for="Status" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>







    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Create" class="btn btn-outline-primary" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="button" value="Cancel" class="btn btn-outline-primary" onclick="history.back()" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    ViewData["Message"]
                </div>
            </div>
        </div>
    }

</form>
