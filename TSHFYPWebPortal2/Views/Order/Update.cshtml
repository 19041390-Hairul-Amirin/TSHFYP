
@section MoreScripts {

    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>





}

@model Order


<form asp-controller="Order"
      asp-action="Update"
      method="post">

    <h2> Order confirmation </h2>

    <input asp-for="PId" hidden />


    @*textboxs for update/edit order. Admin only*@

    <div class="form-group row">

        <div class="col-sm-5">
            <input type="hidden" asp-for="SupplierName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PONum">PO Number: </label>
        <div class="col-sm-5">
            <input asp-for="PONum" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PONum" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="JobNum">Job Number: </label>
        <div class="col-sm-5">
            <input asp-for="JobNum" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="JobNum" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Descr">Description: </label>
        <div class="col-sm-5">
            <input asp-for="Descr" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Descr" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="OrderDate">Order Date: </label>
        <div class="col-sm-5">
            <input type="date" asp-for="OrderDate" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="RevisedDate">Delivery Date:</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSPerformDT" data-target-input="nearest">
                <input type="date" asp-for="RevisedDate" class="form-control" />
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="RevisedDate" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Status">Status: </label>
        <div class="col-sm-5">
            <select id="Status" name="Status" input asp-for="Status" class="form-control">
                <option value="Accepted">Accepted</option>
                <option value="">Not Accepted</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>



    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn btn-outline-primary" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="button" value="Cancel" class="btn btn-outline-primary" onclick="history.back()" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    ViewData["Message"]
                </div>
            </div>
        </div>
    }

</form>
