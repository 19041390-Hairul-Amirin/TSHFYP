


@section MoreScripts {

    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>




    <script language="javascript">
        $(document).ready(function () {
            $('#JSPerformDT')
                .datetimepicker({
                    format: 'YYYY-MM-DD',
                    sideBySide: true
                });
        });
    </script>


    <script type="text/javascript">

   function OpenPDFByPath() {
     $.ajax({
       method: 'GET',
       url: '@Url.Action("OpenPDFPath", "Order")',
       data: {}
     }).done(function (data, statusText, xhdr) {
       var URL = "../" + data;
       window.open(URL, "", "width=700,height=600");
     }).fail(function (xhdr, statusText, errorText) {
     });
   }
   function OpenPDFHidingPath() {
     window.open('@Url.Action("OpenPDF", "Order")', "", "width=700,height=600")
   }
    </script>
}

@model Order


<form asp-controller="Order"
      asp-action="ViewOrder"
      method="post">

    <h2> Order confirmation </h2>

    <input asp-for="PId" hidden />


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="OrderDate">Order Date: </label>
        <div class="col-sm-5">
            <input asp-for="OrderDate" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="DueDate">Due Date: </label>
        <div class="col-sm-5">
            <input asp-for="DueDate" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">

        <div class="col-sm-5">
            <input type="hidden" asp-for="SupplierName" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PONum">PO Number: </label>
        <div class="col-sm-5">
            <input asp-for="PONum" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PONum" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Descr">Description: </label>
        <div class="col-sm-5">
            <input asp-for="Descr" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Descr" class="text-danger"></span>
        </div>
    </div>





    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="RevisedDate">Due Date: </label>
        <div class="col-sm-5">
            <input asp-for="RevisedDate" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="RevisedDate" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="DO">Delivery Order: </label>
        <div class="col-sm-5">
            <input asp-for="DO" class="form-control" readonly="readonly" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Descr" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
           <a input hidden href="#" onclick="OpenPDFHidingPath()">Click here to Open PDF</a>
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="button" value="Back" class="btn btn-outline-primary" onclick="history.back()" />
        </div>
    </div>




    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    ViewData["Message"]
                </div>
            </div>
        </div>
    }

</form>

